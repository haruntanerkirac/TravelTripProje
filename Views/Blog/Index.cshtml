@model TravelTripProje.Models.Sınıflar.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE HTML>
<html>
<head>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">
            <div class="clearfix"></div>
        </div>
    </div>
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <h2>TÜM GEZİ BLOGLARI</h2>
                @foreach (var item in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@item.BlogImage" width="300" height="500" alt="" style="margin-bottom:20px" />
                        <a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a>
                        <p>
                            @item.Aciklama.Substring(0, item.Aciklama.Substring(0, 250).LastIndexOf(" "))...
                            <a href="/Blog/BlogDetay/@item.ID">Devamını Oku</a>
                            <br />
                        </p>
                    </div>
                }
            </div>
            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>Son Bloglar</h3>
                    @foreach (var item in Model.Deger3)
                    {
                        <ul>
                            <li><a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a></li>
                        </ul>
                    }

                </div>
                <div class="comments">
                    <h3>Son Yorumlar</h3>
                    @foreach (var x in Model.Deger2)
                    {
                        <ul>
                            <li><a href="#">@x.KullaniciAdi </a> : <p>@x.Yorum</p> - <a href="/Blog/BlogDetay/@x.ID">@x.Blog.Baslik</a></li>
                        </ul>
                        <br />
                    }
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>