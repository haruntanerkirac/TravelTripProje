<div class="content-form">
    <h3>Yorum Yaz</h3>
    <form method="post">
        <input type="hidden" name="Blogid" value="@ViewBag.deger" required readonly/>
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        <input type="text" placeholder="E-mail Adresi" name="Mail" required />
        <textarea placeholder="Yorum" name="Yorum" required></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>

<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }
</script>
