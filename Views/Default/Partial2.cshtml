﻿@using TravelTripProje.Models.Sınıflar
@model List<Blog>

@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" style="width:275px;height:200px" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToString("dd.MM,yyyy")</span>
            @*<p>@item.Aciklama.Substring(0, 100)...</p>*@
        <p>
            @item.Aciklama.Substring(0, item.Aciklama.Substring(0, 80).LastIndexOf(" ")) ...
        </p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}