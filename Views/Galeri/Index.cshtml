@using TravelTripProje.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>10x10 Resim Galerisi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .gallery-container {
            display: grid;
            grid-template-columns: repeat(10, 1fr);
            gap: 5px;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .gallery-item {
            width: 100%;
            padding-top: 100%; /* Maintain square aspect ratio */
            position: relative;
            overflow: hidden;
            background-color: #ddd;
            border: 1px solid #ccc;
        }

            .gallery-item img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .gallery-item:hover {
                transform: scale(1.05);
                transition: transform 0.3s ease;
            }
    </style>
</head>
<body>
    <h1 style="text-align: center; margin: 20px 0;">GALERİ</h1>
    <div class="gallery-container">
        @foreach (var item in Model)
        {
            <div class="gallery-item"><img src="@item.BlogImage" alt="Image 1"></div>
        }
    </div>
</body>
</html>
